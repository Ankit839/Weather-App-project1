    <form action="/" method="post">
      <div class="container">
         <h1><i class="fab fa-angular"></i></h1>

      <div class="textbox">
         <i class="fas fa-cloud-sun"></i>  
         <input name="city" type="text"  placeholder="Enter a City">
       </div>
         <input type="submit" class="ghost-button" value="Get Weather"> 
         
    </form>
         <% if(weather !== null){ %>
          <p><%= weather %></p>
         <% } %>

         <% if(error !== null){ %>
          <p><%= error %></p>
         <% } %>
      </div>
